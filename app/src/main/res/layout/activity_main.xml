<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/david_dice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <Button
        android:id="@+id/mi_boton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginStart="113dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="230dp"
        android:text="@string/start"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mi_boton2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mi_boton2"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="230dp"
        android:text="@string/reset"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mi_boton" />

    <ImageView
        android:id="@+id/amarillo"
        android:layout_width="118dp"
        android:layout_height="80dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="9dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rojo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amarillo" />

    <ImageView
        android:id="@+id/azul"
        android:layout_width="118dp"
        android:layout_height="80dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="71dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verde"
        app:layout_constraintTop_toBottomOf="@+id/amarillo"
        app:srcCompat="@drawable/azul" />

    <ImageView
        android:id="@+id/rojo"
        android:layout_width="118dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/verde"
        app:layout_constraintEnd_toStartOf="@+id/amarillo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rojo" />

    <ImageView
        android:id="@+id/verde"
        android:layout_width="118dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rojo"
        app:srcCompat="@drawable/verde" />


</androidx.constraintlayout.widget.ConstraintLayout>